{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "runtime.version": "LuaJIT",
    "runtime.special": {
        "require": "require"
    },
    "diagnostics": {
        "enable": true,
        "globals": [
            "vim",
            "describe",
            "pending",
            "it",
            "before_each",
            "after_each",
            "setup",
            "teardown",
            "finally",
            "lfs",
            "_G"
        ]
    },
    "workspace": {
        "library": [
            "runtime/lua",
            "${3rd}/lfs/library",
            "${3rd}/luassert/library"
        ],
        "checkThirdParty": false,
        "maxPreload": 2000,
        "preloadFileSize": 1000
    },
    "telemetry.enable": false
}
